---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="main-background">
			test
		</div>
		<div class="border-rounded">
			<div class="ItA-Lupa"></div>

			<div class="ItAuditorsLogo"></div>
		</div>
		<!-- ItA-Lupa -->


	

		
	</main>
</Layout>

<style>

	main{
		background-color: green;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		max-width: 768px;
		margin: 0 auto;
	}
	.main-background {
    background: url("/Image-100.jpg") no-repeat;
    background-size: cover; /* Ensure the image covers the entire area */
    background-position: center; /* Center the image within the element */
    min-height: 50vh;
    width: 100%;
    max-width: 768px;
    overflow: hidden; /* Hide any overflow */
    margin: 0 auto; /* Center the element horizontally */
}
	.borde-rounded{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
	.ItA-Lupa {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: url("/Avatar.svg") no-repeat;
    background-size:auto; /* Ensure the background image fits within the element */
    background-position: center; /* Center the background image */
    height: 500px; /* Make the element as tall as its container */
    width: 100%; /* Make the element as wide as its container */
    margin-top: -10rem;
}
	.border-rounded{
		background-color: #ffffff;
		height: 200px;
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		border-radius: 0 0px 80px 80px ;
		padding-bottom: 4rem;
		transition: all .5s ease;
	}
	.ItAuditorsLogo{
		background: url("/logo-original.svg") no-repeat;
		background-size: contain;	
		background-position:center; /* Position the image at the bottom */
		height: 300px;
		width:85%;
		margin: 0 auto;
		margin-top: -2rem;
	}

	@media (max-width: 600px){
		.border-rounded{
			padding-bottom: 1rem;
			border-radius: 0 0px 50px 50px ;

		}
		.ItAuditorsLogo{
			margin-top: -3rem;
		}

	}


</style>
